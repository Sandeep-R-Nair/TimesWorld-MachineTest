<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/group_indicator.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Expanded state -->
    <item android:state_expanded="true">
        <layer-list>
            <item android:drawable="@android:color/transparent" />
            <item android:bottom="8dp" android:drawable="@drawable/ic_arrow_down" android:gravity="end" android:right="16dp" android:top="8dp" />
        </layer-list>
    </item>

    <!-- Collapsed state -->
    <item android:state_expanded="false">
        <layer-list>
            <item android:drawable="@android:color/transparent" />
            <item android:bottom="8dp" android:drawable="@drawable/ic_arrow_up" android:gravity="end" android:right="16dp" android:top="8dp" />
        </layer-list>
    </item>
</selector>

